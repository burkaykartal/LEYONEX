                        <div className="relative h-20 mb-4 bg-white rounded-lg p-4">
                          <Image
                            src={urlFor(project.client.logo).url()}
                            alt={project.client.name}
                            fill
                            className="object-contain"
                          />
                        </div>
                      )}
                      <p className="font-semibold">{project.client.name}</p>
                      {project.client.website && (
                        <a
                          href={project.client.website}
                          target="_blank"
                          rel="noopener noreferrer"
                          className="text-accent hover:underline text-sm mt-2 inline-block"
                        >
                          Web sitesini ziyaret et →
                        </a>
                      )}
                    </Card>
                  )}

                  {/* Proje Detayları */}
                  <Card className="bg-dark-card border-white/10 p-6">
                    <h3 className="text-xl font-bold mb-4">Proje Detayları</h3>
                    <div className="space-y-3 text-sm">
                      {project.location?.fairName && (
                        <div>
                          <span className="text-gray-400">Fuar:</span>
                          <p className="font-medium">{project.location.fairName}</p>
                        </div>
                      )}
                      {project.standType && (
                        <div>
                          <span className="text-gray-400">Stand Türü:</span>
                          <p className="font-medium">
                            {project.standType === "modular" && "Modüler"}
                            {project.standType === "medium" && "Orta Seviye"}
                            {project.standType === "premium" && "Premium"}
                            {project.standType === "digital" && "Dijital Ekranlı"}
                          </p>
                        </div>
                      )}
                      {project.squareMeters && (
                        <div>
                          <span className="text-gray-400">Alan:</span>
                          <p className="font-medium">{project.squareMeters} m²</p>

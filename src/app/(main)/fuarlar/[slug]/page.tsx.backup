// Generate static params for all fairs
export async function generateStaticParams() {
  const fairs = await client.fetch(`*[_type == "fairEvent"]{ "slug": slug.current }`);

  return fairs.map((fair: any) => ({
    slug: fair.slug,
  }));
}
